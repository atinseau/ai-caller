{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "vite/client",
      "@types/bun"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [
      ".",
      "./.react-router/types"
    ],
    "paths": {
      "@/styles/*": [
        "./src/styles/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@/infrastructure/*": [
        "./src/infrastructure/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/interfaces/*": [
        "./src/interfaces/*"
      ],
      "@/config/*": [
        "./src/config/*"
      ],
      "@/modules/*": [
        "./src/modules/*"
      ],
      "@/domain/*": [
        "./src/domain/*"
      ],
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
